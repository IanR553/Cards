<body>
    <div class="header">
        <h1>üåü Learn Professions in English üåü</h1>
        <p>Interactive flashcards to learn vocabulary</p>
    </div>

    <div class="flashcard-container">
        <div class="flashcard" id="flashcard">
            <div class="flashcard-face">
                <div class="profession-image" id="profession-image"></div>
                <div class="profession-name" id="profession-name"></div>
                <button class="sound-button" id="sound-button">
                    üîä Listen to pronunciation
                </button>
            </div>
            <div class="flashcard-face flashcard-back">
                <div class="profession-name" id="profession-spanish"></div>
                <div class="profession-spanish">Spanish translation</div>
            </div>
        </div>
        <div class="flip-instruction">
            Click the card to see the translation
        </div>
    </div>

    <div class="controls">
        <button class="control-btn" id="prev-btn">‚¨ÖÔ∏è Previous</button>
        <button class="control-btn" id="next-btn">Next ‚û°Ô∏è</button>
    </div>

    <div class="progress">
        <div>Progress: <span id="current-card">1</span> / <span id="total-cards">10</span></div>
        <div class="progress-bar">
            <div class="progress-fill" id="progress-fill"></div>
        </div>
    </div>

    <script>
        const professions = [
            {
                english: "Doctor",
                spanish: "M√©dico/a",
                emoji: "üë®‚Äç‚öïÔ∏è"
            },
            {
                english: "Nurse",
                spanish: "Enfermero/a",
                emoji: "üë©‚Äç‚öïÔ∏è"
            },
            {
                english: "Teacher",
                spanish: "Maestro/a",
                emoji: "üë®‚Äçüè´"
            },
            {
                english: "Firefighter",
                spanish: "Bombero",
                emoji: "üë®‚Äçüöí"
            },
            {
                english: "Chef",
                spanish: "Cocinero/a",
                emoji: "üë®‚Äçüç≥"
            },
            {
                english: "Farmer",
                spanish: "Granjero/a",
                emoji: "üë®‚Äçüåæ"
            },
            {
                english: "Police Officer",
                spanish: "Oficial de Polic√≠a",
                emoji: "üëÆ‚Äç‚ôÇÔ∏è"
            },
            {
                english: "Vet",
                spanish: "Veterinario/a",
                emoji: "üë®‚Äç‚öïÔ∏è"
            },
            {
                english: "Driver",
                spanish: "Conductor/a",
                emoji: "üë®‚Äç‚úàÔ∏è"
            },
            {
                english: "Dentist",
                spanish: "Dentista",
                emoji: "ü¶∑"
            }
        ];

        let currentCard = 0;
        let isFlipped = false;

        // Elements
        const flashcard = document.getElementById('flashcard');
        const professionImage = document.getElementById('profession-image');
        const professionName = document.getElementById('profession-name');
        const professionSpanish = document.getElementById('profession-spanish');
        const soundButton = document.getElementById('sound-button');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const currentCardSpan = document.getElementById('current-card');
        const totalCardsSpan = document.getElementById('total-cards');
        const progressFill = document.getElementById('progress-fill');

        // Initialize
        totalCardsSpan.textContent = professions.length;
        updateCard();

        // Event listeners
        flashcard.addEventListener('click', flipCard);
        soundButton.addEventListener('click', (e) => {
            e.stopPropagation();
            playPronunciation();
        });
        prevBtn.addEventListener('click', previousCard);
        nextBtn.addEventListener('click', nextCard);

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') previousCard();
            if (e.key === 'ArrowRight') nextCard();
            if (e.key === ' ') {
                e.preventDefault();
                flipCard();
            }
            if (e.key === 'Enter') playPronunciation();
        });

        function updateCard() {
            const profession = professions[currentCard];
            
            // Update image with emoji
            professionImage.textContent = profession.emoji;
            
            // Update text
            professionName.textContent = profession.english;
            professionSpanish.textContent = profession.spanish;
            
            // Update progress
            currentCardSpan.textContent = currentCard + 1;
            progressFill.style.width = ((currentCard + 1) / professions.length) * 100 + '%';
            
            // Reset flip state
            isFlipped = false;
            flashcard.classList.remove('flipped');
        }

        function flipCard() {
            isFlipped = !isFlipped;
            flashcard.classList.toggle('flipped');
        }

        function playPronunciation() {
            const profession = professions[currentCard];
            const text = profession.english;
            
            // Add loading state
            soundButton.classList.add('audio-loading');
            soundButton.textContent = 'üîÑ Loading...';
            
            // Use Web Speech API for pronunciation
            if ('speechSynthesis' in window) {
                // Cancel any ongoing speech
                speechSynthesis.cancel();
                
                const utterance = new SpeechSynthesisUtterance(text);
                utterance.lang = 'en-US';
                utterance.rate = 0.8;
                utterance.pitch = 1;
                utterance.volume = 1;
                
                utterance.onend = () => {
                    soundButton.classList.remove('audio-loading');
                    soundButton.innerHTML = 'üîä Listen to pronunciation';
                };
                
                utterance.onerror = () => {
                    soundButton.classList.remove('audio-loading');
                    soundButton.innerHTML = 'üîä Listen to pronunciation';
                    alert('Sorry, audio is not available in your browser.');
                };
                
                speechSynthesis.speak(utterance);
            } else {
                soundButton.classList.remove('audio-loading');
                soundButton.innerHTML = 'üîä Listen to pronunciation';
                alert('Sorry, your browser does not support text-to-speech.');
            }
        }

        function previousCard() {
            currentCard = (currentCard - 1 + professions.length) % professions.length;
            updateCard();
        }

        function nextCard() {
            currentCard = (currentCard + 1) % professions.length;
            updateCard();
        }

        // Auto-advance every 10 seconds (optional)
        let autoAdvanceTimer;
        
        function startAutoAdvance() {
            autoAdvanceTimer = setInterval(() => {
                if (!isFlipped) {
                    nextCard();
                }
            }, 10000);
        }
        
        function stopAutoAdvance() {
            clearInterval(autoAdvanceTimer);
        }
        
        // Start auto-advance on page load
        startAutoAdvance();
        
        // Stop auto-advance when user interacts
        [flashcard, prevBtn, nextBtn, soundButton].forEach(el => {
            el.addEventListener('click', () => {
                stopAutoAdvance();
                setTimeout(startAutoAdvance, 5000); // Resume after 5 seconds
            });
        });
    </script>
</body>
</html>
